{
  "name": "notification",
  "version": "1.5.1",
  "description": "Microservice for sending messages: email, sms or push. In this version only the sending of email will be available.",
  "main": "dist/server.js",
  "scripts": {
    "build": "gulp build",
    "build:doc": "typedoc --options typedoc.json",
    "start": "node dist/server.js",
    "start:dev": "gulp dev",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "test": "nyc --clean --reporter=text-summary mocha test/**/*.spec.ts",
    "test:unit": "nyc --clean --all --reporter=text-summary mocha test/unit/**/*.spec.ts",
    "test:integration": "nyc --clean --all --reporter=text-summary mocha test/integration/**/*.spec.ts",
    "test:single": "mocha",
    "test:cov": "nyc --clean --all --reporter=html --reporter=text mocha test/**/*.spec.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/haniot/notification"
  },
  "bugs": {
    "url": "https://github.com/haniot/notification/issues"
  },
  "homepage": "https://github.com/haniot/notification#readme",
  "keywords": [
    "microservice",
    "notification",
    "email",
    "sms",
    "push"
  ],
  "author": "NUTES/UEPB",
  "license": "Apache-2.0",
  "nyc": {
    "include": [
      "**/*.tsx",
      "**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "test/*",
      "config/*"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "all": true
  },
  "dependencies": {
    "amqp-client-node": "^1.0.11",
    "body-parser": "^1.19.0",
    "dotenv": "^10.0.0",
    "email-templates": "^8.0.8",
    "express": "^4.17.1",
    "firebase-admin": "^10.0.0",
    "helmet": "^3.23.3",
    "inversify": "^6.0.1",
    "inversify-express-utils": "^6.4.3",
    "mongoose": "^6.0.12",
    "morgan": "^1.10.0",
    "multer": "^1.4.3",
    "nodemailer": "^6.7.0",
    "query-strings-parser": "^2.1.8",
    "reflect-metadata": "^0.1.13",
    "swagger-ui-express": "^4.1.6",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.1",
    "@types/chai": "^4.2.22",
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.0.0",
    "@types/morgan": "^1.9.3",
    "@types/swagger-ui-express": "^4.1.3",
    "chai": "^4.3.4",
    "gulp": "^4.0.2",
    "gulp-nodemon": "^2.5.0",
    "gulp-tslint": "^8.1.4",
    "gulp-typescript": "^6.0.0-alpha.1",
    "mocha": "^9.1.3",
    "nyc": "^15.1.0",
    "supertest": "^6.1.6",
    "ts-node": "^10.4.0",
    "tslint": "^6.1.3",
    "typedoc": "^0.22.6",
    "typescript": "^4.4.4"
  }
}
