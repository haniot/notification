{
  "name": "notification",
  "version": "1.4.0",
  "description": "Microservice for sending messages: email, sms or push. In this version only the sending of email will be available.",
  "main": "dist/server.js",
  "scripts": {
    "build": "gulp build",
    "build:doc": "typedoc --options typedoc.json",
    "start": "node dist/server.js",
    "start:dev": "gulp dev",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "test": "nyc --clean --reporter=text-summary mocha test/**/*.spec.ts",
    "test:unit": "nyc --clean --all --reporter=text-summary mocha test/unit/**/*.spec.ts",
    "test:integration": "nyc --clean --all --reporter=text-summary mocha test/integration/**/*.spec.ts",
    "test:single": "mocha",
    "test:cov": "nyc --clean --all --reporter=html --reporter=text mocha test/**/*.spec.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/haniot/notification"
  },
  "bugs": {
    "url": "https://github.com/haniot/notification/issues"
  },
  "homepage": "https://github.com/haniot/notification#readme",
  "keywords": [
    "microservice",
    "notification",
    "email",
    "sms",
    "push"
  ],
  "author": "NUTES/UEPB",
  "license": "Apache-2.0",
  "nyc": {
    "include": [
      "**/*.tsx",
      "**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "test/*",
      "config/*"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "all": true
  },
  "dependencies": {
    "amqp-client-node": "^1.0.10",
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "email-templates": "^8.0.3",
    "express": "^4.17.1",
    "firebase-admin": "^9.5.0",
    "helmet": "^3.23.3",
    "inversify": "^5.0.5",
    "inversify-express-utils": "^6.3.2",
    "mongoose": "5.10.19",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "nodemailer": "^6.5.0",
    "query-strings-parser": "^2.1.7",
    "reflect-metadata": "^0.1.13",
    "swagger-ui-express": "^4.1.6",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/chai": "^4.2.15",
    "@types/express": "^4.17.11",
    "@types/helmet": "^4.0.0",
    "@types/mocha": "^8.2.1",
    "@types/mongoose": "^5.10.3",
    "@types/morgan": "^1.9.2",
    "@types/swagger-ui-express": "^4.1.2",
    "chai": "^4.3.3",
    "gulp": "^4.0.2",
    "gulp-nodemon": "^2.5.0",
    "gulp-tslint": "^8.1.4",
    "gulp-typescript": "^6.0.0-alpha.1",
    "mocha": "^8.3.2",
    "nyc": "^15.1.0",
    "sinon": "^7.5.0",
    "sinon-mongoose": "^2.3.0",
    "supertest": "^6.1.3",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "typedoc": "^0.20.30",
    "typescript": "^4.2.3"
  }
}
